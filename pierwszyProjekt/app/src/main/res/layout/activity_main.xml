<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="1dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:backgroundTint="#FCF6FD"
                android:src="@android:drawable/ic_menu_sort_by_size" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_weight="3"
                android:text="Kalkulator"
                android:textSize="34sp" />

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:backgroundTint="#FCF6FD"
                android:src="@android:drawable/ic_menu_agenda" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3.5" />

            <ImageButton
                android:id="@+id/button6"
                android:layout_width="1dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:backgroundTint="#FCF6FD"
                android:src="@android:drawable/ic_menu_recent_history" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_mc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FCF6FD"
                android:text="MC"
                android:textColor="#0C0A0A"
                android:textColorLink="#2D2F31"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button_mr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FCF6FD"
                android:text="MR"
                android:textColor="#0C0A0A"
                android:textColorLink="#2D2F31"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button_mplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FCF6FD"
                android:text="M+"
                android:textColor="#0C0A0A"
                android:textColorLink="#2D2F31"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button_mminus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FCF6FD"
                android:text="M-"
                android:textColor="#0C0A0A"
                android:textColorLink="#2D2F31"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FCF6FD"
                android:text="MS"
                android:textColor="#0C0A0A"
                android:textColorLink="#2D2F31"
                android:textSize="10sp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/button_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FCF6FD"
                android:text="M^"
                android:textColor="#0C0A0A"
                android:textColorLink="#2D2F31"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_percent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:shadowDx="12"
                    android:text="%"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button35"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:shadowDx="12"
                    android:text="1/x"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:shadowDx="12"
                    android:text="7"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="4"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:shadowDx="12"
                    android:text="1"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_negative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:shadowDx="12"
                    android:text="+/_"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_clean2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="CE"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_power"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="x2"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="8"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="5"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="2"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="0"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_clean"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="C"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="2-\/x"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="9"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="6"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="3"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_comma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text=","
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="<x|"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_division"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="/"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_multiplication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="X"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_subtraction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="-"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_addition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF6FD"
                    android:text="+"
                    android:textColor="#0C0A0A"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/button_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#196AA6"
                    android:text="="
                    android:textColor="#0C0A0A" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>